@page
@model ComputerFirm.Pages.Components.EditModel

@{
    ViewData["Title"] = "Редактировать";
}

<h1>Редактировать информацию о компоненте</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Component.ID" />
            <div class="form-group">
                <label asp-for="Component.Brand" class="control-label"></label>
                <input asp-for="Component.Brand" class="form-control" />
                <span asp-validation-for="Component.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Component.Price" class="control-label"></label>
                <input asp-for="Component.Price" class="form-control" />
                <span asp-validation-for="Component.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Component.DataofIssue" class="control-label"></label>
                <input asp-for="Component.DataofIssue" class="form-control" />
                <span asp-validation-for="Component.DataofIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Component.WarrantyPeriod" class="control-label"></label>
                <input asp-for="Component.WarrantyPeriod" class="form-control" />
                <span asp-validation-for="Component.WarrantyPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Component.Described" class="control-label"></label>
                <input asp-for="Component.Described" class="form-control" />
                <span asp-validation-for="Component.Described" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Component.Specificatrion" class="control-label"></label>
                <input asp-for="Component.Specificatrion" class="form-control" />
                <span asp-validation-for="Component.Specificatrion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Component.CountryProduced" class="control-label"></label>
                <input asp-for="Component.CountryProduced" class="form-control" />
                <span asp-validation-for="Component.CountryProduced" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Component.TypesofСomponent_ID" class="control-label"></label>
                <input asp-for="Component.TypesofСomponent_ID" class="form-control" />
                <span asp-validation-for="Component.TypesofСomponent_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться в список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

}

<table class="table table-hover">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderData)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Order[0].DueData)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShareofPrepayment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].PaymentMark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ExecutionMark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].GeneralWarranttyPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].CustomerID)

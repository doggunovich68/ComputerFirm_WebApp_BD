                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueData)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShareofPrepayment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentMark)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExecutionMark)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GeneralWarranttyPeriod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCost)
                </td>



            </tr>
        }
    </tbody>
